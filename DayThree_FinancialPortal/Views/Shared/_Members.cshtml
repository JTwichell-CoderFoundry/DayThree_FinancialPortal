@using DayThree_FinancialPortal.Models
@using DayThree_FinancialPortal.Helpers
@using Microsoft.AspNet.Identity
@model Household

<div class="page-title">
    <div class="title_left">
        <h3>Members</h3>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_content">
                <div class="row">
                    @foreach (var member in Model.Members)
                    {
                        <div class="col-sm-4 col-xs-12 profile_details">
                            <div class="well profile_view">
                                <div class="col-sm-12">
                                    <h4 class="brief"><i>Role: @UserRolesHelper.ListUserRole(member.Id)</i></h4>
                                    <div class="left col-xs-7">
                                        <h2>@member.FullName</h2>
                                        <p><strong>About: </strong> @member.Biography </p>
                                        <ul class="list-unstyled">
                                            <li><i class="fa fa-building"></i> Email: @member.Email</li>
                                            <li><i class="fa fa-phone"></i> Phone #: @member.PhoneNumber ?? "(888) 555-1212"</li>
                                        </ul>
                                    </div>
                                    <div class="right col-xs-5 text-center">
                                        <img src="@UserHelper.GetAvatar()" alt="" class="img-circle img-responsive">
                                    </div>
                                </div>
                                <div class="col-xs-12 bottom text-center">
                                    <div class="col-xs-12 col-sm-6 emphasis">
                                        <button type="button" class="btn btn-primary btn-xs">
                                            <i class="fa fa-user"> </i> View Profile
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /page content -->
